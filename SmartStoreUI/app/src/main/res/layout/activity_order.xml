<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/coffee_menu_back"
        tools:src="@drawable/coffee1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="아메리카노"
            android:textSize="40sp"
            android:textColor="@color/coffee_dark_brown"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="4,000원"
                android:fontFamily="@font/eland_choice_l"
                android:textColor="@color/coffee_brown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/minus"
                android:backgroundTint="@color/coffee_point_red"
                android:layout_margin="5dp"
                android:onClick="minus"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="2"
                android:fontFamily="@font/eland_choice_l"
                android:textColor="@color/coffee_brown"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/add"
                android:backgroundTint="@color/coffee_point_red"
                android:layout_marginLeft="5dp"
                android:onClick="add"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/coffee_menu_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_gravity="center"
            android:text="평점"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:text="2.8점"
            android:textColor="@color/black"
            android:fontFamily="@font/cafe24_ssurround_air"
            android:textSize="20sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RatingBar
            android:id="@+id/rating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:max="5"
            android:stepSize="0.1"
            android:rating="2.8"
            android:isIndicator="true"
            android:progressTint="@color/coffee_point_red"
            android:progressBackgroundTint="@color/coffee_light_gray"
            style="?android:attr/ratingBarStyleIndicator"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_regular"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/coffee_brown"
            android:background="@drawable/button_color"
            android:text="등록"/>
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_add_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coffee_point_red"
        android:text="담기"
        android:onClick="goList" />

</LinearLayout>