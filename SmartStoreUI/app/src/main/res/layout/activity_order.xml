<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/coffee_menu_back"
        tools:src="@drawable/coffee1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="아메리카노"
            android:textSize="40sp"
            android:textColor="@color/coffee_dark_brown"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="4,000원"
                android:fontFamily="@font/eland_choice_l"
                android:textColor="@color/coffee_brown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/minus"
                android:backgroundTint="@color/coffee_point_red"
                android:layout_margin="5dp"
                android:onClick="minus"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="2"
                android:fontFamily="@font/eland_choice_l"
                android:textColor="@color/coffee_brown"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/add"
                android:backgroundTint="@color/coffee_point_red"
                android:layout_marginLeft="5dp"
                android:onClick="add"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:backgroundTint="@color/coffee_point_red"
        android:text="담기"
        android:onClick="goList" />

</LinearLayout>