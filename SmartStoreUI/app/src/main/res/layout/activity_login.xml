<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"
        android:src="@drawable/logo"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40sp"

        android:text="Login"
        android:textSize="50dp"
        android:textColor="@color/coffee_dark_brown"
        android:fontFamily="@font/eland_choice_b"
        />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"

        android:background="@drawable/textview_regular"
        android:fontFamily="@font/eland_choice_m"
        android:textColorHint="@color/coffee_light_gray"
        android:hint="ID"
        android:inputType="text"
        android:textColor="@color/coffee_dark_brown"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"

        android:background="@drawable/textview_regular"
        android:fontFamily="@font/eland_choice_m"
        android:textColorHint="@color/coffee_light_gray"
        android:hint="PW"
        android:inputType="textPassword"
        android:textColor="@color/coffee_dark_brown"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:background="@drawable/button_regular"
            android:text="Login"/>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:background="@drawable/button_regular"
            android:text="Join"
            android:onClick="join"/>
    </LinearLayout>
</LinearLayout>